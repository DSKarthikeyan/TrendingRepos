<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrendingRepos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/light_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <!-- Toolbar Customization for Light Theme. -->
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
        <!-- Button Style -->
        <item name="materialButtonStyle">@style/ButtonColor</item>
        <item name="colorButtonNormal">@color/light_white</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <!-- SearchView custom Theme-->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="queryBackground">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>